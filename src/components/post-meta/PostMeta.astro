const { post } = Astro.props
// const { date, timeToRead, classes } = post;
const { date, classes } = post
---

<div class:list={['post-meta', classes]}>
  Posted
  <!-- <time datetime={new Date(date).toISOString()}> -->
  <time>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }.
  </time>

  <!-- {timeToRead && <strong>{{ timeToRead }} min read.</strong>} -->
</div>
