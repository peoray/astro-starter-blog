---
import Logo from '../components/logo/Logo.astro'
import ToggleTheme from '../components/toggle-theme/ToggleTheme.astro'

import '../styles/index.css'
import './Layout.css'
export interface Props {
  title: string
  showLogo: boolean
}

const { title, showLogo = true } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script src="../utils/theme.js" type="text/javascript" is:inline></script>

    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <header class="header">
        <div class="header__left">
          {showLogo && <Logo />}
        </div>

        <div class="header__right">
          <ToggleTheme />
        </div>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <span class="footer__copyright"
          >Copyright Â© {new Date().getFullYear()}.
        </span>
        <span class="footer__links"
          >Powered by <a href="https://astro.build"> Astro</a></span
        >
      </footer>
    </div>
  </body>
</html>
