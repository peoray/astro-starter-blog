---
import Logo from '../components/logo/Logo.astro'
import ToggleTheme from '../components/toggle-theme/ToggleTheme.astro'
import MetaTags from '../components/MetaTags.astro'

import '../styles/index.css'
import '../styles/layout.css'
export interface Props {
  title?: string
  showLogo: boolean
  description?: string
  cover_image?: string
  data?: any
  robots?: boolean
}

const { title, description, cover_image, data, robots, showLogo } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <MetaTags {title} {description} {cover_image} {data} {robots} />
  <body>
    <div id="app">
      <header class="header">
        <div class="header__left">
          {showLogo && <Logo />}
        </div>

        <div class="header__right">
          <ToggleTheme />
        </div>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <span class="footer__copyright"
          >Copyright Â© {new Date().getFullYear()}.
        </span>
        <span class="footer__links"
          >Powered by <a href="https://astro.build"> Astro</a></span
        >
      </footer>
    </div>
  </body>
</html>
